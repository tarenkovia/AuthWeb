@model IEnumerable<MyApp2.Data.UserAns>


@{
    ViewData["Title"] = "Все ответы пользователей";
}
<h1>@ViewData["Title"]</h1>
<a href="/Admin/CreateNewQuest" class="card-link">Добавить задание</a>

<div class="row row-cols-1 row-cols-md-4 mb-4 text-center">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.TitleQuest</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Имя: @item.Name</li>
                    <li class="list-group-item">Почта: @item.Email</li>
                    <li class="list-group-item">Ответ: @item.Answer</li>
                    <li class="list-group-item">Оценка: @item.Mark</li>
                    <li class="list-group-item">Комментарий: @item.Comments</li>
                </ul>
                    <div class="card-body">
                    <a asp-action="GetQuestToRate" asp-controller="Admin" asp-route-id="@item.Id">Оценить</a>
                    <form asp-controller="Admin" asp-action="DeleteUserAns" method="post" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger">Удалить ответ пользователя</button>
                        </form>
                    </div>

            </div>
        </div>
    }
</div>
