@model IEnumerable<MyApp2.Data.UserAns>


@{
    ViewData["Title"] = "Все ответы пользователей";
}
<h1>@ViewData["Title"]</h1>
<a href="/Admin/CreateNewQuest" class="btn btn-addAns">Добавить задание</a>


<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
    @foreach (var item in Model)
    {
        <div class="row gy-3">
            <div class="col">
                <div class="card">
                    <div class="center">
                        <img src="/uploads/lamp.gif" style="width:100%; height:200px" />
                    </div>
                    @if (item.IsOverdue == true)
                    {
                        <h5 class="card-header" style="background-color:orange">Просрочено</h5>
                    }
                    <div class="card-body">
                        <h5 class="card-title">⚡@item.TitleQuest⚡</h5>
                        <p1><strong>Имя пользователя - </strong>@item.Name</p1><br>
                        <p1><strong>Почта пользователя - </strong>@item.Email</p1><br>
                        <p1><strong>Ответ пользователя: </strong><br>@item.Answer</p1>
                        @if(item.Mark != null)
                        {
                            <hr />
                            <div class="row">
                                <div class="col">
                                    <p1><strong>Оценка - </strong>@item.Mark</p1>
                                </div>
                                <div class="col">
                                    <p1><strong>Комментарий - </strong><br>@item.Comments</p1>
                                </div>
                            </div>
                        }
                        <hr />
                        <a asp-action="GetQuestToRate" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-addAns">Оценить</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
